extends layout

block activeVars
	- active = title;

mixin workCard(work)
	.card.text-center.col-md-10.col-sm-12.text-center.col-md-10.col-sm-12.py-0.px-0.mx-auto.my-2
		.row.align-items-center
			.col-md-7.col-sm-12.card-body
				h3.card-title #{work.title}
				p.card-text #{work.description}
				a.btn.btn-primary(href=`${work.link}`, target='_blank', title='Opens link in new tab.') Go to Page
			.col-md-4.col-sm-12.ml-auto.mr-auto.ml-md-4.ml-lg-auto.mr-md-0.px-0(style='max-width: 300px')
				img.w-100(src=`${work.thumbnail}`, alt='')

block content
	main#top.container.my-4
		section.row
			h1.col-12.mb-5= title
			.nav.nav-tabs(role='tablist')
				a.nav-item.nav-link.active.rounded-top.show(id='firstYearTab', data-toggle='tab', href='#firstYearWork', role='tab', aria-controls='firstYearWork') 1st Year Work
				a.nav-item.nav-link.rounded-top(id='secondYearTab', data-toggle='tab', href='#secondYearWork', role='tab', aria-controls='secondYearWork') 2nd Year Work
			.tab-content
				section.tab-pane.fade.active.show(id='firstYearWork', role='tabpanel', aria-labelledby='firstYearTab')
					each work in works
						if(work.schoolYear === 1)
							+workCard(work)
				section.tab-pane.fade(id='secondYearWork', role='tabpanel', aria-labelledby='secondYearTab')
					each work in works
						if(work.schoolYear === 2)
							+workCard(work)